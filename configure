which cmake

rm -rf _builds
rm -rf src/*.so src/*.dylib src/*.o

cmake -H. -B_builds -Wno-dev \
    -DCMAKE_VERBOSE_MAKEFILE=OFF \
    -DCMAKE_INSTALL_PREFIX=_install

cmake --build _builds --target install

DYLIB=_install/lib/libmovr.dylib
SOLIB=_install/lib/libmovr.so

if [ -e $DYLIB ]; then
  cp _install/lib/libmovr.dylib src/libmovr.dylib
  cp _install/lib/libmovr.dylib src/libmovr.so
elif [ -e $SOLIB ]; then
  cp _install/lib/libmovr.so src/libmovr.so
  cp _install/lib/libmovr.so src/libmovr.dylib
fi