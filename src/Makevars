# GLib include and library paths for Linux and macOS
# Use pkg-config to get the correct paths for the current system

# Check if we're on macOS or Linux
UNAME_S := $(shell uname -s)

ifeq ($(UNAME_S),Darwin)
    # macOS paths
    PKG_CPPFLAGS = -I/usr/local/include/glib-2.0 -I/usr/local/lib/glib-2.0/include -I/opt/homebrew/include/glib-2.0 -I/opt/homebrew/lib/glib-2.0/include
    PKG_LIBS = -L/usr/local/lib -L/opt/homebrew/lib -lglib-2.0
else
    # Linux paths - use pkg-config to get the correct paths
    PKG_CPPFLAGS = $(shell pkg-config --cflags glib-2.0)
    PKG_LIBS = $(shell pkg-config --libs glib-2.0)
endif
